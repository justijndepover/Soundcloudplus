<Page
    x:Class="SoundCloudPlus.Pages.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoundCloudPlus.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:SoundCloudPlus.ViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <viewModels:PlaylistPageViewModel x:Key="PlaylistViewModel" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" DataContext="{StaticResource PlaylistViewModel}">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <RelativePanel>
                <TextBlock x:Name="PlaylistTitle" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Text="Playlist" Style="{StaticResource SubTitle}"/>
                <GridView x:Name="PlaylistGridView" RelativePanel.Below="PlaylistTitle" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" ItemsSource="{Binding PlaylistCollection}" SizeChanged="PlaylistGridView_OnSizeChanged" ScrollViewer.VerticalScrollMode="Disabled" ScrollViewer.HorizontalScrollMode="Disabled">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Artwork: "></TextBlock>
                                <Image Source="{Binding playlist.artwork_url}" Style="{StaticResource ImageAlbum}"/>
                                <TextBlock Text="Username: "></TextBlock>
                                <TextBlock Text="{Binding user.Username}"></TextBlock>
                                <TextBlock Text="created_at: "></TextBlock>
                                <TextBlock Text="{Binding created_at}"></TextBlock>
                                <TextBlock Text="track count: "></TextBlock>
                                <TextBlock Text="{Binding playlist.track_count}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </RelativePanel>
        </ScrollViewer>
    </Grid>
</Page>
