<Application
    x:Class="SoundCloudPlus.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoundCloudPlus"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <!--BUTTONS-->
            <Style TargetType="Button" x:Key="btnNav">
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
            <Style TargetType="Button" x:Key="buttonsInMenu">
                <Setter Property="Foreground" Value="#4C4C4C"></Setter>
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
            
            <!--TEXTBLOCK-->
            <Style TargetType="TextBlock" x:Key="textInMenu">
                <Setter Property="Margin" Value="10,0,0,0"></Setter>
            </Style>
            <Style TargetType="TextBlock" x:Key="AppTitle">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="AudioDuration">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="SubTitle">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFF5500"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            
            <!--GRID-->
            <Style TargetType="Grid" x:Key="gridMusicStyleTop">
                <Setter Property="Height" Value="100"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            <Style TargetType="Grid" x:Key="gridMusicStyleBottom">
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Background" Value="#817F7F7F"/>
            </Style>

            <!--IMAGE-->
            <Style TargetType="Image" x:Key="imageAlbum">
                <Setter Property="Height" Value="100"/>
                <Setter Property="Width" Value="100"/>
            </Style>

            <!--BORDER-->
            <Style TargetType="Border" x:Key="borderStyle1">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="#25808080"/>
                <Setter Property="Padding" Value="#10"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
